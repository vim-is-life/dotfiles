#!/usr/bin/env sh
# script to take a screenshot and save it to the Pictures dir based on the date
set -e

# CONFIGURATION
SAVE_DIR="$HOME/Pictures/screenshots"
FILE_EXT="png"
OUT_NAME="$SAVE_DIR/$(date +'%Y-%m-%d--%H-%M-%S').$FILE_EXT"

mkdir -p "$SAVE_DIR"
xfce4-screenshooter --region --save "$OUT_NAME"

printf "$OUT_NAME" | xclip -selection c
notify-send "screenshot saved!" "saved at $OUT_NAME\npath copied to clipboard"
