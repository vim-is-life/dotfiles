#!/bin/sh
###############################################################################
#              start-searxng - start podman container for searxng             #
###############################################################################

podman run --rm --name=searxng \
    -d -p 6969:8080 \
    -v "${HOME}/.config/searxng:/etc/searxng" \
    -e "INSTANCE_NAME=5eyes" \
    docker.io/searxng/searxng &
wait
